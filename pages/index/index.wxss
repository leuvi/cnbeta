/**index.wxss**/
swiper {
  width: 100%;
  height: 360rpx;
}
.swiper-item {
  position: relative;
}
.slide-image {
  width: 100%;
  height: 360rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.slide-image .txt {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background: rgba(0, 0, 0, .6);
  color: #fff;
  left: 0;
  top: 40rpx;
  position: fixed;
  z-index: 2;
}
.content {
  background: #fff;
  padding-left: 20rpx;
}
.items {
  border-bottom: 1rpx solid #ededed;
  display: flex;
  flex-direction: row;
  padding: 30rpx 20rpx 30rpx 0;
  height: 160rpx;
  overflow: hidden;
}
.active {
  background-color: #ededed;
}
.pic {
  flex-basis: 200rpx;
  overflow: hidden;
  flex-shrink: 0; 
}
.pic image {
  width: 200rpx;
  height: 160rpx;
}
.right {
  flex-shrink: 1;
  flex-grow: 1;
  padding-left: 30rpx;
  padding-right: 10rpx;
  overflow: hidden;
}
.right .title {
  font-size: 32rpx;
  line-height: 50rpx;
  color: #333;
  height: 110rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.right .meta {
  font-size: 24rpx;
  height: 36rpx;
  line-height: 36rpx;
  overflow: hidden;
  color: #666;
  display: flex;
}
.classfiy {
  color: #999;
  border-radius: 3px;
  margin-right: 40rpx;
  flex-grow: 1;
  font-size: 28rpx;
}
.comments {
  flex-grow: 1;
  text-align: right;
}
.comments text {
  padding: 6rpx 10rpx;
  background: #ededed;
  border-radius: 6rpx;
}
.tip {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 24px;
}
.tip .inner {
  height: 24px;
  background: #b9defe;
  text-align: center;
  line-height: 24px;
  color: #0073d4;
  font-size: 12px;
  transition: opacity 1000ms;
  opacity: 0;
}
.tip .inner.cur {
  transition: opacity 100ms;
  opacity: 1;
}